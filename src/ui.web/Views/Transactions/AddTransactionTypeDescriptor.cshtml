@model ui.web.Models.Transactions.AssociateTransactionTypeModel
@{
    ViewBag.Title = "Associate Transaction Type";
}

<h2>What transaction type is this?</h2>

<div>@Html.Partial("Detail", Model.Transaction)</div>

<div>
    <table>
        <thead>
        <th>Ticker</th>
        <th>Description</th>
        </thead>
        @foreach (var transactionType in Model.TransactionTypes)
        {
            <tr>
                <td>@Html.ActionLink("Use", "AssociateTransactionType", "Transactions", new { transaction_id = Model.Transaction.Id, transaction_type = transactionType }, null)</td>
                <td>@transactionType</td>
            </tr>
        }
    </table>
    <hr />
</div>